<!-- navbar goes here -->
<header class="bg-white m-0 p-0 border-b-[1px]">

  <!-- the main contanier -->
  <div class="flex h-14 mx-3  content-center">


    <!-- The logo div -->
    <div class="flex justify-center content-center px-1 pr-3">
      <img src="https://img.icons8.com/?size=100&id=113580&format=png&color=000000" alt="main-logo">
      <a href="/home" class="content-center font-extrabold text-orange-600 font-logoFont text-xl">mEvents</a>
    </div>


    <!-- The Seacrch div -->
    <div class="flex rounded-3xl p-1 w-[50%] my-2 border-[1px] border-b-slate-400 overflow-hidden hover:shadow-md">
      <img class=" size-7 self-center" src="https://img.icons8.com/?size=100&id=XU3XKgdpT0qG&format=png&color=000000"
        alt="">
      <input
        class=" border-r-gray-500 border-[1px] w-full placeholder:text-xs placeholder:pl-3 placeholder:font-semibold placeholder:self-center"
        type="text" placeholder="Search events">
      <input class=" w-full placeholder:text-xs placeholder:pl-3 placeholder:font-semibold placeholder:self-center"
        type="text" placeholder="Nepal">
      <img class=" size-7 self-center" src="https://img.icons8.com/?size=100&id=Y6AAeSVIcpWt&format=png&color=FA5252"
        alt="">
    </div>


    <!-- The menu div -->
    <div class="flex mx-6 mr-16 px-8 ">
      <ul class="flex ">
        <a href="#" class="nav-items">Find Events</a>
    <% if(typeof user !== 'undefined' && user !== null){ %>
      <a href="/createEvent/<%=user._id%>" class="nav-items">Create Events </a>
      <%} else { %>
        <a href="/login" class="nav-items">Create Events </a>
      <%} %>

        
        <a href="#" class="nav-items">Help Center</a>
        <a href="#" class="nav-items">Find my tickets</a>
      </ul>
    </div>

    <% if(typeof user !== 'undefined' && user !== null){ %>
      <!-- login signup here -->
      <div
        class="self-center m-0 h-auto pr-1 rounded-2xl w-auto flex justify-center content-center items-center bg-slate-200 gap-3">
        <div class="h-9 w-9 flex  content-center justify-center rounded-full overflow-hidden">
          <img class="object-cover w- h-auto" src="/static/image/gtr.jpg" alt="">
        </div>
        <h3 class="font-profileFont">
          <%=user.name%>
        </h3>

        <div class="relative group">

          <!-- Dropdown Button (Trigger) -->
          <span class="ml-2 cursor-pointer">â–¼</span>

          <div class="absolute right-0">
            <!-- invisible padding for the hoverable for the options to hover over -->

            <!-- Dropdown Menu -->
            <div class=" hidden group-hover:block mt-2 w-48 bg-white rounded-lg shadow-lg right-0">
              <a href="/loggedOut/<%=user._id%>" class="block px-4 py-2 hover:bg-gray-100">log out</a>
              <a href="/login" class="block px-4 py-2 hover:bg-gray-100">Switch Account</a>
            </div>
          </div>

        </div>
      </div>

      <%} else { %>
          <div class="place-content-center p-2 my-2 rounded-2xl bg-orange-400">
            <a class="p-2 border-r-[1px] border-black" href="/login">Login</a>
            <a class="p-2" href="/register">Signup</a>
          </div>

          <%} %>

  </div>
</header>
<!-- navbar ends here -->