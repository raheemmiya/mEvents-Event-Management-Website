<%-include('partials/head')%>

<body>
    <%- include('partials/navBar', {user:user}) %>

    <main class="min-h-screen">
        <!-- Profile Header Section -->
        <section class="h-[80vh] w-full flex justify-center">
            <div class="shadow-2xl self-center h-[80%] w-[50%] rounded-2xl flex items-center justify-center bg-white">
                <div class="flex flex-col justify-center items-center">
                    <!-- Profile Picture -->
                    <div class="h-44 w-44 overflow-hidden rounded-full">
                        <img 
                            src="/static/image/profile-picture.jpg" 
                            alt="Profile Picture"
                            class="object-cover h-full w-full"
                        >
                    </div>

                    <!-- Profile Info -->
                    <h2 class="mt-4 font-profileFont font-extrabold text-4xl"><%= user.name %></h2>
                    
                    <!-- Action Buttons -->
                    <div class="text-center mt-4 text-sm font-semibold space-x-4">
                        <button 
                            class="bg-blue-700 rounded-md px-9 py-3 text-slate-50 hover:bg-blue-800 transition-colors" 
                            type="button"
                        >
                            Follow
                        </button>
                        <button 
                            class="px-9 py-3 text-blue-700 hover:bg-gray-100 rounded-md transition-colors" 
                            type="button"
                        >
                            Contact
                        </button>
                    </div>

                    <!-- Stats -->
                    <div class="flex justify-center items-center mt-4">
                        <div class="flex justify-center items-center mt-4 flex-col border-r-2 pr-4">
                            <input 
                                value="28" 
                                class="bg-white w-20 text-center font-semibold font-mainFont cursor-default" 
                                readonly
                                type="text" 
                                name="followers"
                            >
                            <label for="followers">Followers</label>
                        </div>
                        <div class="flex justify-center items-center mt-4 flex-col">
                            <input 
                                value="2" 
                                class="bg-white w-20 text-center font-semibold font-mainFont cursor-default" 
                                readonly
                                type="text" 
                                name="events"
                            >
                            <label class="pl-[18px]" for="events">Events</label>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="h-auto w-[80%] mt-4">
                        <p class="text-center text-gray-700"><%=user.description%></p>
                    </div>

                    <!-- Social Links -->
                    <div class="my-5">
                        <div class="flex justify-center items-center space-x-3">
                            <a href="#" class="hover:opacity-80 transition-opacity">
                                <img class="h-8 w-8" src="https://img.icons8.com/?size=100&id=uLWV5A9vXIPu&format=png&color=000000" alt="Social Icon 1">
                            </a>
                            <a href="#" class="hover:opacity-80 transition-opacity">
                                <img class="h-8 w-8" src="https://img.icons8.com/?size=100&id=Xy10Jcu1L2Su&format=png&color=000000" alt="Social Icon 2">
                            </a>
                            <a href="#" class="hover:opacity-80 transition-opacity">
                                <img class="h-8 w-8" src="https://img.icons8.com/?size=100&id=47745&format=png&color=000000" alt="Social Icon 3">
                            </a>
                            <a href="#" class="hover:opacity-80 transition-opacity">
                                <img class="h-8 w-8" src="https://img.icons8.com/?size=100&id=13800&format=png&color=000000" alt="Social Icon 4">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Created Events Section -->
        <section class="max-h-[40vh] px-20 py-4 my-10">
            <h2 class="text-2xl font-light pb-2 border-b-2">Created Events</h2>
            <div class="w-full h-auto mt-4 space-x-5 flex rounded-xl overflow-hidden">
                <% createdEvents.forEach(events => { %> 
                    <%- include('partials/specific-events', {user:user, event:events}) %>
                <% }) %>
            </div>
        </section>

        <!-- Liked Events Section -->
        <% if (typeof favouriteEvents !== 'undefined' && favouriteEvents !== null) { %>
            <section class="max-h-[40vh] px-20 py-4 my-10">
                <h2 class="text-2xl font-light pb-2 border-b-2">Liked Events</h2>
                <div class="w-full h-auto mt-4 space-x-5 flex rounded-xl overflow-hidden">
                    <% favouriteEvents.forEach(events => { %>
                        <%- include('partials/specific-events', {user:user, event:events}) %>
                    <% }) %>
                </div>
            </section>
        <% } %>
    </main>

    <%- include('partials/footer', {user:user}) %>
</body>
</html>